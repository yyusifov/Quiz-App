<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADFF00"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_233873_4119037" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:fontFamily="@font/koulen"
        android:text="HELLO!"
        android:textColor="#000000"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="false" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="297dp"
        android:layout_height="51dp"
        android:fontFamily="@font/lexend_deca"
        android:text="We promise to give you the best educational experience."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/login_button1"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#263238"
        android:elevation="5dp"
        android:fontFamily="@font/koulen"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:stateListAnimator="@null"
        android:text="LOG IN"
        android:textAlignment="center"
        android:textSize="26sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/sign_up_button1"
        android:layout_width="231dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F6F6F6"
        android:elevation="5dp"
        android:fontFamily="@font/koulen"
        android:includeFontPadding="true"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:stateListAnimator="@null"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="#263238"
        android:textSize="26sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button1"
        app:strokeColor="#263238"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>